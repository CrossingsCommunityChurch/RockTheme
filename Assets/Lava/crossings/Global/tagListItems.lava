{% comment %}
  Params

  @category - Tag category to retrieve

{% endcomment %}

{% category where:'Name == "{{category}}"' iterator:'tagCategory' %}
{% assign categoryId = tagCategory | First | Property:'Id' %}
  {% tag where:'CategoryId == {{categoryId}}' iterator:'tags' %}
    {% for tag in tags %}
      <li><a href="#">{{tag.Name}}</a></li>
    {% endfor %}
  {% endtag %}
{% endcategory %}
