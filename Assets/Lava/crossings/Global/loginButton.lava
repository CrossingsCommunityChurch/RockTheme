{%- comment -%}
  Simple Login Button. Checks if someone is currently logged in or not.
{%- endcomment -%}

{%- if CurrentPerson -%}
  <a href="#" class="account-toggle login-btn btn btn-outline-thin">
    <i class="fas fa-bars"></i> <span>Account</span>
  </a>
{%- else -%}
  <a href="/login" class="login-btn btn btn-outline-thin">
    <i class="fas fa-user"></i> <span>Login</span>
  </a>
{%- endif -%}
